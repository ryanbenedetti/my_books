<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Pages</th>
      <th>Publisher</th>
      <th>Pub. year</th>
      <th>Isbn</th>
      <th>Genre</th>
      <th>Category</th>
      <th>Avg. Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.pages %></td>
        <td><%= book.publisher %></td>
        <td><%= book.pub_year %></td>
        <td><%= book.isbn %></td>
        <td><%= book.genre %></td>
        <td><%= book.category %></td>
        <td><%= book.avg_rating %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

