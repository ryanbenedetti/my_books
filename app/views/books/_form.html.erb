    <%= f.label :category %><br>
    <%= f.select :category,  options_for_select([ "Hardcover", "Paperback", "Mass Market Paperback", "Trade Paperback", "eBook",  "Audible Audiobook", "Audio CD" ])   %>
  </div>

  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id,  options_for_select([['Hardcover', 1], ['Paperback', 2], ['Mass Market Paperback', 3], ['Trade Paperback', 4], ['eBook', 5], ['Audible Audiobook', 6], ['Audio', 7]])   %>
  </div> -->

  <div class="field">
    <%= f.label :avg_rating %><br>
    <%= f.number_field :avg_rating   %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
