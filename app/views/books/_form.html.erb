<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :pages %><br>
    <%= f.number_field :pages %>
  </div>
  <div class="field">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher %>
  </div>
  <div class="field">
    <%= f.label :pub_year %><br>
    <%= f.number_field :pub_year %>
  </div>
<div class="field">
    <%= f.label :my_pub_date %><br>
    <%= f.date_field :my_pub_date, { order: [:month, :day, :year], start_year: 1800} %>
  </div>

  <div class="field">
    <%= f.label :isbn %><br>
    <%= f.number_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.select :genre,  options_for_select([ "Classics", "Science Fiction", "Mystery", "Slipstream" ])   %>
  </div>

<div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Book::CATEGORIES, prompt: "Pick one"   %>
  </div>

  <div class="field">
    <%= f.label "Category ID" %><br>
    <%= f.select :category_id, options_for_select([['Hardcover', 1], ['Paperback', 2], ['Mass Market Paperback', 3], ['Trade Paperback', 4], ['eBook', 5], ['Audible Audiobook', 6], ['Audio', 7]]), prompt: "Pick one"   %>
  </div>


